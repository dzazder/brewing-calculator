<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="popupMenuStyle">@style/PopupMenuListView</item>
        <item name="android:actionOverflowButtonStyle">@style/OverflowButton</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>

    <style name="OverflowButton" parent="@style/Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow_menu</item>
    </style>

    <!-- OverFlow menu Styles -->
    <style name="PopupMenuListView" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">@dimen/popup_divider_height</item>
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>

    <style name="StyleButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_default</item>
    </style>

    <style name="StyleButton_HalfButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minHeight">@dimen/btn_min_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">@dimen/size_zero</item>
    </style>

    <style name="StyleTextView_DialogTitle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/padding_normal</item>
        <item name="android:paddingBottom">@dimen/padding_normal</item>
    </style>

    <style name="StyleEditText_CalcField" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">@dimen/calc_field_min_height</item>
        <item name="android:minWidth">@dimen/calc_field_min_width</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_calc_field</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColorHighlight">@color/colorPrimaryMedium</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="StyleEditText_CalcFieldSmall" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:minHeight">@dimen/calc_field_small_min_height</item>
        <item name="android:minWidth">@dimen/calc_field_small_min_width</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_calc_field_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColorHighlight">@color/colorPrimaryMedium</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="StyleTextView_ResultField" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_calc_field_small</item>
        <item name="android:padding">@dimen/padding_small</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.Holo.Light.Spinner">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:Widget.Holo.Light.TextView.SpinnerItem">

    </style>

</resources>
