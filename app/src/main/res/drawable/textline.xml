<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="-2dp" android:left="-2dp" android:right="-2dp">
        <shape android:shape="rectangle" >
            <padding android:bottom="@dimen/padding_small"
                android:right="@dimen/padding_large"
                android:left="@dimen/padding_large"
                android:top="@dimen/padding_small"/>

            <solid android:color="@android:color/transparent" />

            <stroke android:width="1dp" android:color="@color/colorAccentDark"></stroke>

            <corners android:radius="2dp"></corners>
        </shape>
    </item>


</layer-list>