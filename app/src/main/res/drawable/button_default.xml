<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/size_zero" />
            <stroke android:width="@dimen/stroke_width" android:color="@color/colorPrimaryDark" />
            <solid android:color="@color/colorAccent"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/size_zero" />
            <stroke android:width="@dimen/stroke_width" android:color="@color/colorPrimaryDark" />
            <solid android:color="@color/colorAccent"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/size_zero" />
            <stroke
                android:width="@dimen/size_zero"
                android:color="@color/colorAccent" />
            <solid android:color="@color/colorPrimaryDark" />
            <padding android:bottom="@dimen/padding_small"
                android:top="@dimen/padding_small"
                android:left="@dimen/padding_small"
                android:right="@dimen/padding_small"></padding>
        </shape>
    </item>
</selector>